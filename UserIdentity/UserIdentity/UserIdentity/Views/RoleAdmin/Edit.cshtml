@model UserIdentity.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            Add To @Model.Role.Name
        </div>

        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr>
                    <td colspan="2">Bu role eklenebılecek bır kullanıcı yok</td>
                </tr>
            }
            else
            {
                <tr>
                    <td>User Id : </td>
                    <td>Role : </td>
                </tr>

                foreach (var item in Model.NonMembers)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@item.Id" />
                        </td>
                    </tr>
                }
            }
        </table>

    </div>


    <div class="panel panel-primary">
        <div class="panel-heading">
            Remove From @Model.Role.Name
        </div>

        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr>
                    <td colspan="2">Bu role eklenmıs bır kullanıcı yok</td>
                </tr>
            }
            else
            {
                <tr>
                    <td>User Id : </td>
                    <td>Role : </td>
                </tr>

                foreach (var item in Model.Members)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@item.Id" />
                        </td>
                    </tr>
                }
            }
        </table>

    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

}




